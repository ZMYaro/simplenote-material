{
	"manifest_version": 2,
	"name": "Material Design for Simplenote",
	"version": "1.0",
	"description": "Change the Simplenote web app interface to a Material Design visual style.",
	
	"permissions": [
		"*://app.simplenote.com/*",
		"*://simple-note.appspot.com/*"
	],
	
	"content_scripts": [{
		"matches": [
			"*://app.simplenote.com/*",
			"*://simple-note.appspot.com/*"
		],
		"css": [
			"styles/main.css"
		]
	}]
}
